<%= render 'shared/page_title', title: "Reset Password" %>

<%= form_for @user, :url => password_resets_path(params[:id]) do |f| %>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :confirmation_password %>
    <%= f.password_field :confirmation_password %>
  </div>
  <div class="actions">
    <%= f.submit "Update Password" %>
  </div>
<% end %>
